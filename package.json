{
  "name": "blader-stack",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:iam\"",
    "dev:server": "bun --watch apps/server/src/index.ts",
    "dev:iam": "cd apps/iam && bun run dev",
    "build:server": "cd apps/server && bun build --compile --target bun --outfile server src/index.ts",
    "sync:ui:web": "bun scripts/sync-ui-web.mjs"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.2.1",
    "typescript": "^5"
  }
}
