{
  "name": "blader-stack",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:iam\"",
    "dev:server": "bun --watch apps/server/src/index.ts",
    "dev:iam": "cd apps/iam && bun run dev",
    "build": "bun run build:packages && bun run build:apps",
    "build:packages": "bun run build:database && bun run build:types && bun run build:ui",
    "build:database": "cd packages/database && bun run build",
    "build:types": "cd packages/types && bun run build",
    "build:ui": "cd packages/ui && bun run build",
    "build:apps": "bun run build:server && bun run build:iam && bun run build:dashboard && bun run build:web",
    "build:server": "cd apps/server && bun build --compile --target bun --outfile server src/index.ts",
    "build:iam": "cd apps/iam && bun run build",
    "build:dashboard": "cd apps/dashboard && bun run build",
    "build:web": "cd apps/web && bun run build",
    "install:all": "bun install && bun install --filter '*'",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules bun.lockb",
    "clean:install": "bun run clean && bun install",
    "sync:ui:web": "bun scripts/sync-ui-web.mjs",
    "sync:ui:mobile": "bun scripts/sync-ui-mobile.mjs"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.2.1",
    "typescript": "^5"
  }
}
